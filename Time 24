import java.io.*;

import java.util.*;

public class Solution {

    public static void main(String[] args) {

        Scanner AB=new Scanner(System.in);

        int hours=AB.nextInt();

         int minutes=AB.nextInt();

         int seconds=AB.nextInt();

        minutes=minutes+(seconds/60);

        seconds=seconds%60;

        hours=hours+(minutes/60);

        minutes=minutes%60;

        System.out.println("Total Number of hours is " +  hours);

         System.out.println("Total Number of minutes is " +  minutes);

         System.out.println("Total Number of seconds is " +  seconds);

        

        

        

        /* Enter your code here. Read input from STDIN. Print output to STDOUT. Your class should be named Solution. */

    }

}
